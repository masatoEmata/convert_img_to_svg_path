{
    "version": 1,
    "formatters": {
        "main": {
            "format": "%(asctime)s %(name)s:%(lineno)s %(funcName)s [%(levelname)s]: %(message)s"
        }
    },
    "handlers": {
        "consoleHandler": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "main"
        },
        "errorHandler": {
            "class": "logging.FileHandler",
            "level": "ERROR",
            "formatter": "main",
            "filename": "logs/error.txt"
        },
        "fileHandler": {
            "class": "logging.FileHandler",
            "level": "INFO",
            "formatter": "main",
            "filename": "logs/log.txt"
        }
    },
    "loggers": {
        "__main__": {
            "handlers": [
                "consoleHandler",
                "fileHandler",
                "errorHandler"
            ]
        }
    },
    "root": {
        "level": "DEBUG"
    },
    "reference": {
        "FukuharaYohei": "https: //qiita.com/FukuharaYohei/items/92795107032c8c0bfd19",
        "kazusa_nakagawa": "https://zenn.dev/kazusa_nakagawa/articles/5c7ca8a7b2ac75"
    }
}
